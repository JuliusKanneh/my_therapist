rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can only read/update their own user document.
    // Anyone can create a user document during sign-up.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }

    // A user can read/write sessions that belong to them.
    match /therapy_sessions/{sessionId} {
      allow read, write: if request.auth.uid == resource.data.userId;
    }

    // A user can read messages that belong to them and create new ones.
    // The query in the app MUST filter by userId for this to work.
    match /messages/{messageId} {
      allow read: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
      // Disallow updates/deletes for message history integrity.
      allow update, delete: if false;
    }
  }
}
